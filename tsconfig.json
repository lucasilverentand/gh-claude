{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "lib": ["ES2022"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "allowImportingTsExtensions": true,
    "types": ["bun"],
    "paths": {
      "@repo-agents/types": ["./packages/types/src/index.ts"],
      "@repo-agents/cli-utils": ["./packages/cli-utils/src/index.ts"],
      "@repo-agents/cli-utils/*": ["./packages/cli-utils/src/*.ts"],
      "@repo-agents/parser": ["./packages/parser/src/index.ts"],
      "@repo-agents/parser/*": ["./packages/parser/src/*.ts"],
      "@repo-agents/generator": ["./packages/generator/src/index.ts"],
      "@repo-agents/generator/*": ["./packages/generator/src/*.ts"],
      "@repo-agents/runtime": ["./packages/runtime/src/index.ts"],
      "@repo-agents/cli": ["./packages/cli/src/index.ts"]
    }
  },
  "include": ["packages/*/src/**/*"],
  "exclude": ["node_modules", "**/dist", "**/*.test.ts"]
}
